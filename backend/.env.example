# ===================================
# VARIÁVEIS DE AMBIENTE - KMTRACKER V2 BACKEND
# ===================================
# Copie este arquivo para .env e preencha com seus valores

PORT=3005
NODE_ENV=development

# Firebase Admin SDK (APENAS FIRESTORE - sem Realtime Database)
FIREBASE_PROJECT_ID=seu-projeto-firebase
FIREBASE_STORAGE_BUCKET=seu-projeto-firebase.appspot.com
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@seu-projeto-firebase.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=seu-client-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"

# JWT
JWT_SECRET=sua_chave_secreta_jwt_super_segura_aqui
JWT_EXPIRES_IN=7d

# CORS - URLs permitidas (separadas por vírgula)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Frontend URL (para deploy)
FRONTEND_URL=https://seu-frontend.railway.app
